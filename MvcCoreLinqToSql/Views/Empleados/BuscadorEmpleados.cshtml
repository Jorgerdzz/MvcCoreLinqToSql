@{
}
@model List<Empleado>

<h1>Buscador empleados</h1>
<form method="POST">
    <label>Introduzca oficio: </label>
    <input type="text" name="oficio" class="form-control"/>
    <label>Introduzca salario: </label>
    <input type="number" name="salario" class="form-control" />
    <button class="btn btn-info">Buscar empleados</button>
</form>

<h3 style="color: rebeccapurple">
    @ViewData["MENSAJE"]
</h3>

@if(Model != null)
{
    <table class="table table-info table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>APELLIDO</th>
                <th>OFICIO</th>
                <th>SALARIO</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Empleado empleado in Model)
            {
                <tr>
                    <td>@empleado.IdEmpleado</td>
                    <td>@empleado.Apellido</td>
                    <td>@empleado.Oficio</td>
                    <td>@empleado.Salario</td>
                </tr>
            }
        </tbody>
    </table>
}
